<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.chatListActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息"
        android:gravity="center"
        android:textColor="@color/rad"
        android:background="@color/s111"
        android:textSize="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
<!--        <View-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="0dp"/>-->

        <EditText
            android:id="@+id/chatListText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/请输入用户昵称"
            android:minHeight="48dp" />
        <Button
            android:id="@+id/chatSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/查询"
            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/chatListShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotationX="0" />
    </LinearLayout>
</LinearLayout>